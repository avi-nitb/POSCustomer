<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/toolbar"></include>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_name"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_30"
            android:background="@drawable/back"
            android:gravity="center_vertical"
            android:hint="Name"
            android:inputType="text"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_mobile"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/back"
            android:gravity="center_vertical"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_address"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/back"
            android:gravity="center_vertical"
            android:hint="Address"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_email"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/back"
            android:gravity="center_vertical"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_passwd"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/back"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_conf_passwd"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/back"
            android:gravity="center_vertical"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:contentColor="@color/black"
            android:background="@drawable/back"
            android:layout_marginTop="@dimen/dim_15"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            app:showFullName="true"
            app:selectionDialogShowSearch="false"
            app:countryPreference="country"
            app:keyboardAutoPopOnSearch="false"
            app:textSize="@dimen/dim_12"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:background="@drawable/back"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:padding="@dimen/dim_15"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />




</RelativeLayout>
